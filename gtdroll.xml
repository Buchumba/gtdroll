						<Offset x="18" y="-16" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						if GtdRollFrame:IsShown() then 
							GtdRollFrame:Hide()
						else
							GtdRollFrame:Show()
						end		
					</OnClick>
					<OnEnter>GTDR_ButtonRollOnLoad("Открыть меню GTDROLL")</OnEnter>
					<OnLeave>GTDR_ButtonRollOnLeave()</OnLeave>
				</Scripts>
			</Button>	

