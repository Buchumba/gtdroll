					<Anchors>
						<Anchor point="TOP">
							<Offset x="0" y="-13" />
						</Anchor>						
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Frames>									
			<Button name="$parent_CloseButton" inherits="UIPanelCloseButton">
				<Anchors>
					<Anchor point="TOPRIGHT" relativeTo="FrameRollxml" relativePoint="TOPRIGHT">
						<Offset>
							<AbsDimension x="-10" y="-10" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
  			    	    this:GetParent():Hide()
  			    	    GTDR_ShowMiniFrame = 0  			    	           			
          			</OnClick>
				</Scripts>
			</Button>
			<Button inherits="UIPanelButtonTemplate" text="!">
