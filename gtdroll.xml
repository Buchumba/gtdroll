						<Anchor point="TOP">
							<Offset x="0" y="-9" />
						</Anchor>						
					</Anchors>
				</FontString>
			</Layer>
			<Layer level="OVERLAY">
				<FontString inherits="GameFontDisableSmall" font="font/MORPHEUS.TTF" name="FieldRollIntervalHelper" text="">
