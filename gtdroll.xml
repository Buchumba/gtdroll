					<Anchor point="TOPRIGHT" relativeTo="GtdRollFrame" relativePoint="TOPRIGHT">
						<Offset>
							<AbsDimension x="-10" y="-10" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
  			    	    GtdRollFrame:Hide()  			    	    
  			    	    GTDR_G_RatingFrame:Hide()
