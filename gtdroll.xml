					<OnEnter>GTDR_ButtonRollOnLoad("Вспомогательный фрейм для роллов")</OnEnter>
					<OnLeave>GTDR_ButtonRollOnLeave()</OnLeave>
				</Scripts>
			</Button>

			<!--настройки автолута-->
			<Button inherits="UIPanelButtonTemplate" text="off" name="GTDR_IsZG">
				<Size x="25" y="18" />
				<Anchors>
					<Anchor point="BOTTOMRIGHT">
						<Offset x="-18" y="129" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>
						GTDR_SetZGAutoneed()
					</OnClick>
				</Scripts>
			</Button>
			<Button inherits="UIPanelButtonTemplate" text="off" name="GTDR_IsAQ">
