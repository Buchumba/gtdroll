		<Scripts>
			<OnLoad>
				this:RegisterForDrag("LeftButton");
				this:SetMovable(1);
			</OnLoad>
			<OnShow>
				GTDR_MiniInit()
			</OnShow>			
			<OnEnter>
				GTDR_MiniInit()
			</OnEnter>
			<OnDragStart>
				this:StartMoving();
				this.isMoving = true;
			</OnDragStart>
			<OnDragStop>
				this:StopMovingOrSizing();
				this.isMoving = false;
			</OnDragStop>
