						GTDR_SetBMAutoneed()
					</OnClick>
				</Scripts>
			</Button>
			<!--//настройки автолута-->	

			<Button inherits="UIPanelButtonTemplate" text="PP-рейтинг гильдии">
				<Size x="140" y="23" />
				<Anchors>
					<Anchor point="BOTTOMLEFT">
						<Offset x="18" y="20" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>						
						GTDR_OpenRatingScrollFrame(GTDR_G_RatingFrame, nil)	
					</OnClick>
				</Scripts>
			</Button>
			<Button inherits="UIPanelButtonTemplate" name="ButtonRatingParty" text="PP-рейтинг пати\рейда">
				<Size x="140" y="23" />
				<Anchors>
					<Anchor point="BOTTOMRIGHT">
						<Offset x="-18" y="20" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnClick>						
						GTDR_OpenRatingScrollFrame(GTDR_P_RatingFrame, true)
					</OnClick>
				</Scripts>
			</Button>	
		</Frames>
		<Scripts>
			<OnLoad>
				GTDR_OnLoad()
				--this:Show()
				this:RegisterForDrag("LeftButton");
				this:SetMovable(1);
			</OnLoad>			
			<OnShow>
				GTDR_OnShow()
			</OnShow>
			<OnDragStart>
				this:StartMoving();
				this.isMoving = true;
			</OnDragStart>
			<OnDragStop>
				this:StopMovingOrSizing();
				this.isMoving = false;
			</OnDragStop>
		</Scripts>
	</Frame>
	<!--конец стартового фрейма-->
	<!--Roll-фрейм-->
	<Frame name="FrameRollxml" parent="UIParent" toplevel="true" movable="true" hidden="true" frameStrata="MEDIUM" enableMouse="true" enableKeyboard="true">
		<Size x="180" y="80" />
		<Anchors>
			<Anchor point="CENTER" />
		</Anchors>
		<KeyValues>
			<KeyValue key="backdropInfo" value="BACKDROP_DIALOG_32_32" keyType="string" type="global" />
		</KeyValues>
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background"  tile="true">
			<BackgroundInsets>
				<AbsInset left="11" right="12" top="12" bottom="11" />
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="32" />
			</TileSize>
			<EdgeSize>
				<AbsValue val="32" />
			</EdgeSize>
		</Backdrop>
